<Page
    x:Class="HomeAutomation.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HomeAutomation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" MinHeight="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <SplitView Name="slider" Grid.Row="1" IsPaneOpen="False">
            <SplitView.Pane>
                <RelativePanel>
                    <TextBlock Name="Home" Text="Home" Style="{StaticResource SubheaderTextBlockStyle}" Width="100px" Height="50px" Margin="10,0,0,0"/>
                    <TextBlock Name="Seting" Text="Setting" Style="{StaticResource SubheaderTextBlockStyle}" Width="100px" Height="50px" Margin="10,50,0,0"/>

                </RelativePanel>
            </SplitView.Pane>

        </SplitView>



        <StackPanel Name="Header" Orientation="Horizontal" >
            <Border Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}" Grid.Row="0" >
                <ToggleButton Name="hamburger_menu" VerticalAlignment="Stretch" Width="42" Margin="0,0,0,2" Click="hamburger_menu_click" IsChecked="False" >
                    <ToggleButton.Content>
                        <FontIcon x:Name="Hamburger" FontFamily="Segoe MDL2 Assets" Glyph="&#xE700;" Margin="0,10,0,0" Height="20" VerticalAlignment="Top"/>
                    </ToggleButton.Content>
                </ToggleButton>

            </Border>
            <TextBlock x:Name="Header_text" Text="Header text box" 
                       Style="{StaticResource TitleTextBlockStyle}"
                       Margin="10" />
        </StackPanel>
    </Grid>
</Page>
