<Page
    x:Class="HomeAutomation.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HomeAutomation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="150,245,0,0" VerticalAlignment="Top" Click="button_Click"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="35,75,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="110"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="190,75,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="126"/>
        <Rectangle x:Name="rect1" Fill="#FF1D1DD8" HorizontalAlignment="Left" Height="40" Margin="70,155,0,0" Stroke="Black" VerticalAlignment="Top" Width="175"/>
        <Slider x:Name="slider" HorizontalAlignment="Left" Margin="70,350,0,0" VerticalAlignment="Top" Width="180" ValueChanged="slider_ValueChanged"/>

    </Grid>
</Page>
